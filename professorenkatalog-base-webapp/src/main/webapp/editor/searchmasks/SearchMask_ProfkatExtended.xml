<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE MyCoReWebPage>
<MyCoReWebPage>
<section title="Searchmask for catalogus professorum extended type"  xml:lang="de">
<editor id="SearchMask_CPRExtended">

<!--  <target type="debug" /> -->
<!-- MyCore-Default: <source uri="request:servlets/MCRSearchServlet?mode=load&amp;id={id}" />
                     <target type="servlet" name="MCRSearchServlet" method="post" format="xml" />  -->
  <source uri="request:servlets/MCRJSPSearchServlet?mode=load&amp;id={XSL.editor.source.id}&amp;MCRSessionID={MCRSessionID}" />
  <target type="servlet" url="/servlets/MCRJSPSearchServlet" method="post" format="xml" /> 



<components root="SearchMask_CPRExtended" var="/query">

  <include uri="webapp:editor/searchmasks/imports-searchmasks-cpr.xml" />
  <panel id="SearchMask_CPRExtended"> 
    <hidden var="@mask" default="~searchstart-extcpr" />
    <hidden var="conditions/@format" default="xml" />
    <hidden var="conditions/boolean/@operator" default="AND" />
    <hidden var="conditions/boolean/boolean1/@operator" default="OR" />
    <hidden var="conditions/boolean/boolean1/condition1/@field"    default="class_type" />
    <hidden var="conditions/boolean/boolean1/condition1/@operator" default="=" />
    <hidden var="conditions/boolean/boolean1/condition1/@value"    default="ro_professor" />
    <hidden var="conditions/boolean/boolean1/condition2/@field"    default="class_type" />
    <hidden var="conditions/boolean/boolean1/condition2/@operator" default="=" />
    <hidden var="conditions/boolean/boolean1/condition2/@value"    default="bue_professor" />
    
                    
     <cell row="1" col="1" colspan="4" anchor="NORTHWEST" var="conditions/boolean/boolean3/condition1">
        <repeater min="3" max="10">
          <panel lines="off">
            <cell row="1" col="1" anchor="WEST" var="@field">
              <list type="dropdown" default="allMeta" style="width:150px">
                <item value="allMeta" i18n="Editor.Search.metadata" />
                <item value="name" i18n="Professorum.OMD.name" />
                <item value="institute" i18n="OMD.CPR.institutes" />
                <item value="area" i18n="OMD.CPR.fieldofstudies" />
                <item value="proftype" i18n="Professorum.OMD.profarea" />
                <item value="birthplace" i18n="Professorum.OMD.birthplace" />
                <item value="deathplace" i18n="Professorum.OMD.deathplace" />
                <item value="confession" i18n="OMD.CPR.confessions" />
                <item value="parentprofession" i18n="Professorum.OMD.parentprofession" />
                <item value="biography" i18n="OMD.CPR.biographics" />
                <item value="academicdegree" i18n="Professorum.OMD.academicdegrees" />
                <item value="acad_degree_study" i18n="Professorum.OMD.acad_degree_study" />
                <item value="acad_degree_promo" i18n="Professorum.OMD.acad_degree_promo" />
                <item value="acad_degree_habil" i18n="Professorum.OMD.acad_degree_habil" />              
                
                <item value="otherprofessorship" i18n="Professorum.OMD.otherprofessorships" />
                <item value="adminfunction" i18n="Professorum.OMD.adminfunctions" />
                <item value="otherfunction" i18n="Professorum.OMD.otherfunctions" />
                <item value="membership" i18n="Professorum.OMD.memberships_short" />
                <item value="award" i18n="Professorum.OMD.awards" />
                <item value="mainpublication" i18n="Professorum.OMD.mainpublications" />
                <item value="source" i18n="Professorum.OMD.sources" />
                <item value="reference" i18n="Professorum.OMD.references_short" />
                <item value="derivatelabel" i18n="Professorum.OMD.derivatelabel" />                
              </list>
            </cell>
            <cell row="1" col="2" anchor="WEST" var="@operator" ref="list.operators.text" />
            <cell row="1" col="3" anchor="WEST" var="@value">
              <textfield width="40" />
            </cell>
          </panel>
        </repeater>
      </cell>       
   
    <cell col="2" row="9" colspan="3" anchor="NORTHWEST" ref="SearchConnect"  var="conditions/boolean/boolean3" />
    <cell col="1" row="10" colspan="4" anchor="WEST" ><hr/> </cell>           
               
 	<cell col="1" row="11" anchor="NORTHWEST" ref="LProfessortime" />
    <cell col="2" row="11" anchor="NORTHWEST" ref="DProfessortime" var="conditions/boolean/boolean3/boolean2" />               
	<cell col="1" row="20" colspan="4" anchor="WEST" ><hr/> </cell>               
               
    <cell col="1" row="21" anchor="NORTHWEST" ref="LHistOrigins" />
    <cell col="2" row="21" colspan="3" anchor="NORTHWEST" ref="DHistOrigins" var="conditions/boolean/boolean2/boolean1" />

    <cell col="1" row="22"  anchor="NORTHWEST" ref="LBklProf" />
    <cell col="2" row="22"  colspan="3" anchor="NORTHWEST" ref="DBklProf"    var="conditions/boolean/boolean2/boolean2" />
    
    <cell col="1" row="23" anchor="NORTHWEST" ref="LProfTypes" />
    <cell col="2" row="23" colspan="3" anchor="NORTHWEST" ref="DProfTypes"   var="conditions/boolean/boolean2/boolean3" />
        
    <cell col="1" row="25" anchor="NORTHWEST" ref="LProfStates" />
    <cell col="2" row="25" colspan="3" anchor="NORTHWEST" ref="DProfStates"  var="conditions/boolean/boolean2/boolean4" />
    
    <cell col="2" row="29" colspan="3" anchor="NORTHWEST" ref="SearchConnect"  var="conditions/boolean/boolean2" />
    
    <cell col="1" row="30" colspan="4" anchor="WEST" ><hr/> </cell>
    
   <!-- <cell col="1" row="21" anchor="NORTHWEST" ref="LFacultytime" />
    <cell col="2" row="21" anchor="NORTHWEST" ref="DFacultytime" var="conditions/boolean/boolean3/boolean1" /> -->
       
    <cell col="1" row="33" anchor="NORTHWEST" ref="LLifetime" />
    <cell col="2" row="33" anchor="NORTHWEST" ref="DLifetime" var="conditions/boolean/boolean3/boolean3" />
    
    <cell col="1" row="39" colspan="4" anchor="WEST" ><hr/> </cell>
    <cell col="1" row="40" colspan="4" anchor="SOUTHEAST" height="50px">
        <panel lines="off">
        <!--   <cell row="1" col="1" anchor="WEST">
              <text i18n="Editor.Search.connect" />
          </cell>
          <cell row="1" col="2" anchor="WEST" var="conditions/boolean/boolean/@operator">
            <list type="dropdown" default="and">
              <item value="and" i18n="Editor.Search.and" />
              <item value="or" i18n="Editor.Search.or" />
            </list>
          </cell> -->                    
          <cell row="1" col="3" anchor="WEST">
            <text label="Maximal " />
          </cell>
          <cell row="1" col="4" anchor="WEST" var="@maxResults">
            <list type="dropdown" default="0">
              <item value="20"  label="20"   />
              <item value="100" label="100"  />
              <item value="500" label="500"  />            
              <item value="0"   i18n="Editor.Search.all" />
            </list>
          </cell>
          <cell row="1" col="5" anchor="WEST">
             <text i18n="Editor.Search.perpage" />
          </cell>
          <cell row="1" col="6" anchor="WEST" var="@numPerPage">
            <list type="dropdown" default="50">
              <item value="10" label="10" />
              <item value="20" label="20" />
              <item value="50" label="50" />
              <item value="0"  i18n="Editor.Search.all" />
            </list>
          </cell>
        </panel>
      </cell>    
    <cell col="1" row="42" colspan="4" anchor="EAST" ref="SearchTwoButtons" />
    <hidden var="sortBy/field/@name" default="rostockdate_ivon" />
    <hidden var="sortBy/field/@order" default="ascending" />
  </panel>

<list type="dropdown" id="list.operators.text" default="contains">
      <item value="contains" i18n="Editor.Search.contains" />
      <item value="like" i18n="Editor.Search.like" />
      <item value="phrase" i18n="Editor.Search.phrases"/>
    </list>
 </components>
</editor>
</section>
