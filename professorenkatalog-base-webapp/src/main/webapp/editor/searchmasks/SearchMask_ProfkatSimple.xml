<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE MyCoReWebPage>
<MyCoReWebPage>
<section title="Searchmask for catalogus professorum simple type" xml:lang="de">
<editor id="SearchMask_CPRSimple">

<!-- <target type="debug" /> --> 
<!-- MyCore-Default: <source uri="request:servlets/MCRSearchServlet?mode=load&amp;id={id}" />
                     <target type="servlet" name="MCRSearchServlet" method="post" format="xml" />  -->
  <source uri="request:servlets/MCRJSPSearchServlet?mode=load&amp;id={XSL.editor.source.id}&amp;MCRSessionID={MCRSessionID}" />
  <target type="servlet" url="/servlets/MCRJSPSearchServlet" method="post" format="xml" />


<components root="SearchMask_CPRSimple" var="/query">

  <include uri="webapp:editor/searchmasks/imports-searchmasks-cpr.xml" />
  <panel id="SearchMask_CPRSimple"> 
    <hidden var="@mask" default="~searchstart-simplecpr" />
    <!-- <hidden var="@maxResults" default="100" /> -->    
    <hidden var="conditions/@format" default="xml" />
    <hidden var="conditions/boolean/@operator" default="AND" />
    <hidden var="conditions/boolean/boolean1/@operator" default="OR" />
    <hidden var="conditions/boolean/boolean1/condition1/@field"    default="class_type" />
    <hidden var="conditions/boolean/boolean1/condition1/@operator" default="=" />
    <hidden var="conditions/boolean/boolean1/condition1/@value"    default="ro_professor" />
    <hidden var="conditions/boolean/boolean1/condition2/@field"    default="class_type" />
    <hidden var="conditions/boolean/boolean1/condition2/@operator" default="=" />
    <hidden var="conditions/boolean/boolean1/condition2/@value"    default="bue_professor" />
        
    <cell col="1" row="1" anchor="NORTHWEST" ref="LProfNames" />
    <cell col="2" row="1" colspan="3"  anchor="SOUTHWEST" ref="DProfNames" var="conditions/boolean/condition2" />

	<cell col="1" row="2" anchor="NORTHWEST" ref="LProfessortime" />
    <cell col="2" row="2" colspan="3"  anchor="SOUTHWEST" ref="DProfessortime" var="conditions/boolean/boolean3" />
    
    <cell col="1" row="3" anchor="NORTHWEST" ref="LHistOrigins" />
    <cell col="2" row="3" colspan="2" anchor="NORTHWEST" ref="DHistOrigins" var="conditions/boolean/boolean4" />

    <cell col="1" row="4"  anchor="NORTHWEST" ref="LBklProf" />
    <cell col="2" row="4"  colspan="3" anchor="SOUTHWEST" ref="DBklProf" var="conditions/boolean/boolean5" />
       
	<cell col="1" row="6" anchor="NORTHWEST" ref="LMetadata" />
    <cell col="2" row="6" colspan="3"  anchor="SOUTHWEST" ref="DMetadataCPR" var="conditions/boolean/condition6" />
    
    <cell col="1" row="10" colspan="4" anchor="WEST" > <hr/> </cell>
    <cell col="1" row="11" colspan="5" anchor="EAST" ref="SearchTwoButtons"  />
   <!-- <cell col="1" row="12" colspan="5" anchor="SOUTHEAST" ref="LMaxResult100" /> --> 
    <hidden var="sortBy/field/@name" default="rostockdate_ivon" />
    <hidden var="sortBy/field/@order" default="ascending" />
      
  </panel>
 </components>
</editor>
</section>
</MyCoReWebPage>