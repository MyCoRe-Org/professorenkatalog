    <xed:bind xpath="condition[@field='allMeta'][@operator='contains']">
      <div class="form-group" style="margin-bottom:6px">
        <label class="col-sm-3 control-label input-sm" for="allMeta">
          <xed:output i18n="Editor.Search.Label.AllMeta" />
