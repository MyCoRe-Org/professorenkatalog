  <!-- Zeitraumsuche über Professur -->
  <xed:template id="searchfield.proftime">
    <xed:bind xpath="boolean[@operator='and']">
      <div class="form-group" style="margin-bottom:6px">
        <label class="col-sm-3 control-label input-sm" for="allMeta">
          <xed:output i18n="Editor.Search.Label.Professortime" />
        </label>
        <div class="col-sm-9">
          <div class="row">
            <div class="col-sm-3 control-label input-sm">
              <xed:output i18n="Editor.Search.Label.Professor.after" />
            </div>
            <div class="col-sm-3">
              <xed:bind xpath="condition[@field='proftype_ibis-proftype_ibis'][@operator='&gt;=']/@value">
                 <input id="proftime_after" class="form-control" />
              </xed:bind>
            </div>
            <div class="col-sm-3 control-label input-sm">
              <xed:output i18n="Editor.Search.Label.Professor.before" />
            </div>
            <div class="col-sm-3">
                        <xed:bind xpath="condition[@field='proftype_ivon-proftype_ivon'][@operator='&lt;=']/@value">
                    <input id="proftime_before" class="form-control" />
              </xed:bind>
            </div>
          </div>
        </div>
      </div>
    </xed:bind>
  </xed:template>

