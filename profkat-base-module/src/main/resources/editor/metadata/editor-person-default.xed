<?xml version="1.0" encoding="UTF-8"?>
<!-- method='post' to avoid charset problems !!! -->

<xed:form xmlns:xed="http://www.mycore.de/xeditor" role="form" class="form-horizontal" accept-charset="UTF-8" method="post">
    <div class="row">
    <div class="alert alert-info col-sm-12">
      <xed:output i18n="Editor.Common.headline" />
   </div>
   </div>
   <xed:post-processor xsl="editor-person-postprocessor.xsl" />
   <xed:cleanup-rule xpath="//*" relevant-if="true()" />
   <xed:cleanup-rule xpath="//*[@class='MCRMetaHistoryEvent']/*/text" relevant-if="string-length(text()) &gt; 0" />
   <xed:cleanup-rule xpath="/mycoreobject/metadata//*" relevant-if="@* or * or (string-length(text()) &gt; 0)" />
   <xed:cleanup-rule xpath="/mycoreobject/metadata//*" relevant-if="@* or * or (string-length(text()) &gt; 0)" />
   <xed:cleanup-rule xpath="//*[@class='MCRMetaXML']/*" relevant-if=".//*[@* or (string-length(text()) &gt; 0)]" />
   <xed:cleanup-rule xpath="//*[@class='MCRMetaLink']/*" relevant-if="string-length(@xlink:href) &gt; 0" />
   
   <xed:cleanup-rule xpath="/mycoreobject/metadata/*" relevant-if=" ./*" />
   
    <xed:include uri="resource:editor/metadata/includes-generic.xed" ref="in.out" />
    <xed:bind xpath="/mycoreobject">
      <xed:include uri="resource:editor/metadata/includes-generic.xed" ref="mycore.common" />
      <xed:bind xpath="metadata">
    <xed:include uri="resource:editor/metadata/includes-generic.xed" ref="failed-validation-messages" />
    
    
    <!--Status -->
    <xed:bind xpath="box.status[@class='MCRMetaLangText']">
      <div class="form-group">
        <label class="col-sm-2 control-label" for="status"><xed:output i18n="OMD.CPR.statesM" /></label>
        <div class="col-sm-10">
          <div class="form-group">
            <div class="col-sm-10">
              <div class="row" style="margin-bottom:6px">
                <div class="col-sm-12">
                  <xed:bind xpath="status">
                    <select id="status" class="form-control">
                      <option value="inprogress"><xed:output i18n="OMD.CPR.states.inprogress" /></option>
                      <option value="long"><xed:output i18n="OMD.CPR.states.long" /></option>
                      <option value="short"><xed:output i18n="OMD.CPR.states.short" /></option>
                      <option value="document"><xed:output i18n="OMD.CPR.states.document" /></option>
                      <option value="other"><xed:output i18n="OMD.CPR.states.other" /></option>
                    </select>
                  </xed:bind>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </xed:bind>
     <!-- Status [ENDE] -->
    
    <!-- Personentyp -->

  <xed:bind xpath="box.type[@class='MCRMetaClassification']">
    <div class="form-group">
    
      <label class="col-sm-2 control-label" for="persontype">
        <xed:output i18n="OMD.CPR.typeM" />
      </label>
      <div class="col-sm-10">
        <xed:repeat xpath="type[@classid='profkat_class_persontypes']">
          <xed:cleanup-rule xpath="//box.type/type" relevant-if="@categid" />
          <div class="form-group">
            <div class="col-sm-10">
              <xed:bind xpath="@categid">
                <select id="persontype" class="form-control">
                  <!-- <option value="">
                    <xed:output i18n="Editor.Common.choose" />
                  </option> -->
                  <xed:include uri="xslStyle:items2options:classification:editor:-1:children:profkat_class_persontypes" />
                </select>
              </xed:bind>
            </div>
            <div class="col-sm-2">
              <div class="btn-group btn-group-sm pull-right">
                <xed:controls />
              </div>
            </div>
          </div>
        </xed:repeat>
      </div>
    </div>
  </xed:bind>

    <!-- Personentyp [ENDE]-->
    
    <!-- Eoche -->
    <xed:bind xpath="box.epoch[@class='MCRMetaClassification']">
      <div class="form-group">
        <label class="col-sm-2 control-label" for="persontype">
          <xed:output i18n="OMD.CPR.epoch" />
        </label>
        <div class="col-sm-10">
          <xed:repeat xpath="epoch[@classid='profkat_class_epochs']">
            <xed:cleanup-rule xpath="//box.epoch/epoch" relevant-if="@categid" />
            <div class="form-group">
              <div class="col-sm-10">
                <xed:bind xpath="@categid">
                  <select id="epoch" class="form-control">
                    <xed:include uri="xslStyle:items2options:classification:editor:-1:children:profkat_class_epochs" />
                  </select>
                </xed:bind>
              </div>
              <div class="col-sm-2">
                <div class="btn-group btn-group-sm pull-right">
                  <xed:controls />
                </div>
              </div>
            </div>
          </xed:repeat>
        </div>
      </div>
    </xed:bind>
    <!-- Epoche [ENDE]-->

    <div class="form-group">
      <label class="col-sm-2 control-label"><xed:output i18n="OMD.CPR.nameM" /></label>
      <div class="col-sm-10">
        <xed:bind xpath="box.surname[@class='MCRMetaLangText']">
          <xed:repeat xpath="surname">
            <div class="row" style="margin-bottom:6px"> 
              <label class="col-sm-2 control-label input-sm" for="surname">
                <xed:output i18n="OMD.CPR.hint.nameSurnameM" />
              </label>
              <div class="col-sm-8">
                <input id="surname" type="text" class="form-control input-sm"   />
              </div>
              <div class="col-sm-2">
                <div class="btn-group btn-group-sm pull-right">
                  <xed:controls />
                </div>
              </div>
            </div>
          </xed:repeat> 
        </xed:bind>
        <xed:bind xpath="box.firstname[@class='MCRMetaLangText']">
          <xed:repeat xpath="firstname">
            <div class="row" style="margin-bottom:6px">
              <label class="col-sm-2 control-label input-sm" for="firstname">
                <xed:output i18n="OMD.CPR.hint.nameFirstnameM" />
              </label>
              <div class="col-sm-8">
                <input id="firstname" type="text" class="form-control input-sm"   />
              </div>
              <div class="col-sm-2">
                <div class="btn-group btn-group-sm pull-right">
                  <xed:controls />
                </div>
              </div>
            </div>
          </xed:repeat> 
        </xed:bind>
        <xed:bind xpath="box.nameaffix[@class='MCRMetaLangText']">
          <xed:repeat xpath="nameaffix">
            <div class="row" style="margin-bottom:6px"> 
              <label class="col-sm-2 control-label input-sm" for="nameaffix">
                <xed:output i18n="OMD.CPR.nameaffixes" />
              </label>
              <div class="col-sm-8" style="margin-bottom:6px">
                <input id="nameaffix" type="text" class="form-control input-sm"   />
              </div>
              <div class="col-sm-2">
                <div class="btn-group btn-group-sm pull-right">
                  <xed:controls />
                </div>
              </div>
            </div>
          </xed:repeat> 
        </xed:bind>
        <xed:bind xpath="box.academictitle[@class='MCRMetaLangText']">
          <xed:bind xpath="academictitle">
            <div class="row" style="margin-bottom:6px"> 
              <label class="col-sm-2 control-label input-sm" for="academictitle">
                <xed:output i18n="OMD.CPR.academictitles" />
              </label>
              <div class="col-sm-8" style="">
                <input id="academictitle" type="text" class="form-control input-sm"   />
              </div>
            </div>
          </xed:bind> 
        </xed:bind>
      </div>
    </div>

  <!-- Professorship [START]-->
  <xed:bind xpath="box.professorship[@class='MCRMetaHistoryEvent']">
    <div class="form-group">
    
      <label class="col-sm-2 control-label" for="persontype">
        <xed:output i18n="OMD.CPR.professorshipsM" />
      </label>
      <div class="col-sm-10">
        <xed:repeat xpath="professorship">
          <xed:cleanup-rule xpath="//box.professorship/professorship" relevant-if="event" />
          <div class="form-group">
            <div class="col-sm-10">
              <div class="row" style="margin-bottom:6px"> 
                <label class="col-sm-2 control-label input-sm" for="date_shown">
                  <xed:output i18n="OMD.CPR.hint.dateShown" />
                </label>
                <xed:bind xpath="text[@xml:lang='de']">
                <div class="col-sm-2">
                  <input id="date_shown" type="text" class="form-control input-sm"   />
                </div>
                </xed:bind>
                <label class="col-sm-2 control-label input-sm" for="date_shown">
                  <xed:output i18n="OMD.CPR.hint.dateFrom" />
                </label>
                <xed:bind xpath="von">
                  <div class="col-sm-2">
                    <input id="date_from" type="text" class="form-control input-sm"   />
                  </div>
                </xed:bind>
                <label class="col-sm-2 control-label input-sm" for="date_shown">
                  <xed:output i18n="OMD.CPR.hint.dateTo" />
                </label>
                <xed:bind xpath="bis">
                  <div class="col-sm-2">
                    <input id="date_shown" type="text" class="form-control input-sm"   />
                  </div>
                </xed:bind>
                </div>
                <div class="row" style="margin-bottom:6px">         
                <label class="col-sm-2 control-label input-sm" for="proftype">
                  <xed:output i18n="OMD.CPR.hint.profType" />
                </label>
                <xed:bind xpath="classification[@classid='profkat_class_proftypes']/@categid">
                  <div class="col-sm-10">
                    <select id="proftype" class="form-control">
                      <xed:include uri="xslStyle:items2options:classification:editor:-1:children:profkat_class_proftypes" />
                    </select>
                  </div>
                </xed:bind>
                </div>
                <div class="row" style="margin-bottom:6px">
                <xed:bind xpath="event">
                  <div class="col-sm-10 col-sm-offset-2">
                    <input id="event" type="text" class="form-control input-sm" />
                  </div>
                </xed:bind>
                </div>
                <xed:bind xpath="text[2]">
                  <div class="row" style="margin-bottom:6px">
                  <xed:bind xpath="@xml:lang">
                    <div class="col-sm-3">
                      <select id="SProfTypeText2" class="form-control input-sm">
                        <option value=""><xed:output i18n="Editor.Common.choose" /></option>
                        <option value="x-chair"><xed:output i18n="OMD.CPR.hint.chairID" /></option>
                        <option value="x-predec"><xed:output i18n="OMD.CPR.hint.predec" /></option>
                        <option value="x-succ"><xed:output i18n="OMD.CPR.hint.succ" /></option>
                  
                      </select>
                    </div>
                  </xed:bind>
                  <div class="col-sm-9">
                    <input id="ProfTypeText2" type="text" class="form-control input-sm"   />
                  </div>
                  </div>  
                </xed:bind>
                
                <xed:bind xpath="text[3]">
                  <div class="row"  style="margin-bottom:6px">
                  <xed:bind xpath="@xml:lang">
                    <div class="col-sm-3">
                      <select id="SProfTypeText3" class="form-control input-sm">
                        <option value=""><xed:output i18n="Editor.Common.choose" /></option>
                        <option value="x-chair"><xed:output i18n="OMD.CPR.hint.chairID" /></option>
                        <option value="x-predec"><xed:output i18n="OMD.CPR.hint.predec" /></option>
                        <option value="x-succ"><xed:output i18n="OMD.CPR.hint.succ" /></option>
                      </select>
                    </div>
                  </xed:bind>
                  <div class="col-sm-9">
                    <input id="ProfTypeText3" type="text" class="form-control input-sm"   />
                  </div>
                  </div>
                </xed:bind>
                
                <xed:bind xpath="text[4]">
                  <div class="row" style="margin-bottom:6px">
                  <xed:bind xpath="@xml:lang">
                    <div class="col-sm-3">
                      <select id="SProfTypeText4" class="form-control input-sm">
                        <option value=""><xed:output i18n="Editor.Common.choose" /></option>
                        <option value="x-chair"><xed:output i18n="OMD.CPR.hint.chairID" /></option>
                        <option value="x-predec"><xed:output i18n="OMD.CPR.hint.predec" /></option>
                        <option value="x-succ"><xed:output i18n="OMD.CPR.hint.succ" /></option>
                  
                      </select>
                    </div>
                  </xed:bind>
                  <div class="col-sm-9">
                    <input id="ProfTypeText4" type="text" class="form-control input-sm"   />
                  </div>
                  </div>
                </xed:bind>
              </div>
          
            <div class="col-sm-2">
              <div class="btn-group btn-group-sm pull-right">
                <xed:controls />
              </div>
            </div>
          </div>
        </xed:repeat>
      </div>
    </div>
  </xed:bind>
  <!-- Professorship [ENDE]-->
  <!-- Zeitraum insgesamt [START] -->
  <xed:bind xpath="box.period[@class='MCRMetaHistoryDate']">
    <div class="form-group">
      <label class="col-sm-2 control-label" for="period">
        <xed:output i18n="OMD.CPR.periodsM" />
      </label>
      <div class="col-sm-10">
        <xed:repeat xpath="period">
          <xed:cleanup-rule xpath="//box.period/period" relevant-if="text/text()" />
          <xed:cleanup-rule xpath="//box.period" relevant-if="period" />
          <div class="form-group">
            <div class="col-sm-10">
              <div class="row" style="margin-bottom:6px"> 
                <label class="col-sm-2 control-label input-sm" for="date_shown">
                  <xed:output i18n="OMD.CPR.hint.dateShown" />
                </label>
                <xed:bind xpath="text[@xml:lang='de']">
                <div class="col-sm-2">
                  <input id="date_shown" type="text" class="form-control input-sm"   />
                </div>
                </xed:bind>
                <label class="col-sm-2 control-label input-sm" for="date_shown">
                  <xed:output i18n="OMD.CPR.hint.dateFrom" />
                </label>
                <xed:bind xpath="von">
                  <div class="col-sm-2">
                    <input id="date_from" type="text" class="form-control input-sm"   />
                  </div>
                </xed:bind>
                <label class="col-sm-2 control-label input-sm" for="date_shown">
                  <xed:output i18n="OMD.CPR.hint.dateTo" />
                </label>
                <xed:bind xpath="bis">
                  <div class="col-sm-2">
                    <input id="date_shown" type="text" class="form-control input-sm"   />
                  </div>
                </xed:bind>
                </div>
                
            </div>
            <div class="col-sm-2">
              <div class="btn-group btn-group-sm pull-right">
                <xed:controls />
              </div>
            </div>
          </div>
        </xed:repeat>
      </div>
    </div>
  </xed:bind> 



  <!-- Zeitraum insgesamt [ENDE] -->
  
  <!-- Fakultät [START] -->
  <xed:bind xpath="box.faculty[@class='MCRMetaHistoryEvent']">
    <div class="form-group">
      <label class="col-sm-2 control-label" for="faculty">
        <xed:output i18n="OMD.CPR.facultiesM" />
      </label>
      <div class="col-sm-10">
        <xed:repeat xpath="faculty">
          <xed:cleanup-rule xpath="//box.faculty/faculty" relevant-if="text/text()" />
          <xed:cleanup-rule xpath="//box.faculty" relevant-if="faculty" />
          <div class="form-group">
            <div class="col-sm-10">
              <div class="row" style="margin-bottom:6px"> 
                <label class="col-sm-2 control-label input-sm" for="date_shown">
                  <xed:output i18n="OMD.CPR.hint.dateShown" />
                </label>
                <xed:bind xpath="text[@xml:lang='de']">
                <div class="col-sm-2">
                  <input id="date_shown" type="text" class="form-control input-sm"   />
                </div>
                </xed:bind>
                <label class="col-sm-2 control-label input-sm" for="date_shown">
                  <xed:output i18n="OMD.CPR.hint.dateFrom" />
                </label>
                <xed:bind xpath="von">
                  <div class="col-sm-2">
                    <input id="date_from" type="text" class="form-control input-sm"   />
                  </div>
                </xed:bind>
                <label class="col-sm-2 control-label input-sm" for="date_shown">
                  <xed:output i18n="OMD.CPR.hint.dateTo" />
                </label>
                <xed:bind xpath="bis">
                  <div class="col-sm-2">
                    <input id="date_shown" type="text" class="form-control input-sm"   />
                  </div>
                </xed:bind>
                </div>
                <div class="row" style="margin-bottom:6px">         
                <xed:bind xpath="classification[@classid='profkat_class_institutions']/@categid">
                  <div class="col-sm-12">
                    <select id="proftype" class="form-control">
                      <xed:include uri="xslStyle:items2options:classification:editor:-1:children:profkat_class_institutions" />
                    </select>
                  </div>
                </xed:bind>
                <xed:if test="starts-with(/mycoreobject/@ID, 'cpb_')">
                  <xed:bind xpath="event">
                	<div class="col-sm-12">
                  	  <input id="faculty_event" type="text" class="form-control input-sm"   />
               		</div>
                  </xed:bin>
                </xed:if>
              </div>
            </div>
            <div class="col-sm-2">
              <div class="btn-group btn-group-sm pull-right">
                <xed:controls />
              </div>
            </div>
          </div>
        </xed:repeat>
      </div>
    </div>
  </xed:bind> 
  <!-- Fakultät [ENDE] -->

  <!--  Institute [START] -->
  <xed:bind xpath="box.institute[@class='MCRMetaXML']">
    <div class="form-group">
      <label class="col-sm-2 control-label" for="institute">
        <xed:output i18n="OMD.CPR.institutes" />
      </label>
      <div class="col-sm-10">
        <xed:repeat xpath="institute">
          <div class="form-group">
            <div class="col-sm-10">
              <div class="row" style="margin-bottom:6px"> 
                <label class="col-sm-2 control-label input-sm" for="institute_time">
                  <xed:output i18n="OMD.CPR.hint.time" />
                </label>
                <xed:bind xpath="time">
                  <div class="col-sm-2">
                    <input id="institute_time" type="text" class="form-control input-sm"   />
                  </div>
                </xed:bind>
                
                <label class="col-sm-2 control-label input-sm" for="institute_type">
                  <!-- <xed:output i18n="OMD.CPR.hint.type" /> -->
                </label>
                <xed:bind xpath="@type">
                  <div class="col-sm-6">
                    <!-- <select id="insitute_type" class="form-control input-sm">
                      <option value=""><xed:output i18n="Editor.Common.Empty" /></option>
                    </select> -->
                  </div>
                </xed:bind>
              </div>
              <div class="row" style="margin-bottom:6px">   
                <label class="col-sm-2 control-label input-sm" for="institute_text">
                  <xed:output i18n="OMD.CPR.hint.text" />
                </label>
                <xed:bind xpath="text">
                  <div class="col-sm-10">
                    <input type="text" id="institute_text" class="form-control input-sm" />
                  </div>
                </xed:bind>
              </div>
            </div>
            <div class="col-sm-2">
              <div class="btn-group btn-group-sm pull-right">
                <xed:controls />
              </div>
            </div>
          </div>
        </xed:repeat>
      </div>
    </div>
  </xed:bind>
  <!-- Institute [ENDE] -->   

  <!-- Lehr- und Forschungsgebiet [START] -->
  <xed:bind xpath="box.fieldofstudy[@class='MCRMetaLangText']">
    <div class="form-group">
      <label class="col-sm-2 control-label" for="fieldofstudy">
        <xed:output i18n="OMD.CPR.fieldofstudies" />
      </label>
      <div class="col-sm-10">
        <xed:repeat xpath="fieldofstudy">
          <div class="form-group">
            <div class="col-sm-10">
              <input id="fieldofstudy" type="text" class="form-control" />
            </div>
            <div class="col-sm-2">
              <div class="btn-group btn-group-sm pull-right">
                <xed:controls />
              </div>
            </div>
          </div>
        </xed:repeat>
      </div>
    </div>
  </xed:bind>
  <!-- Lehr und Forschungsgebiet [ENDE] -->
  
  <!--  Fachgebietsklassifikation [START] -->
  <xed:bind xpath="box.subjectclass[@class='MCRMetaClassification']">
    <div class="form-group">
      <label class="col-sm-2 control-label" for="subjectclass">
        <xed:output i18n="OMD.CPR.subjectsM" />
      </label>
      <div class="col-sm-10">
        <xed:repeat xpath="subjectclass[@classid='profkat_class_subjects']">
        <xed:cleanup-rule xpath="//box.subjectclass/subjectclass" relevant-if="@categid" />
          <div class="form-group">
            <div class="col-sm-10">
              <xed:bind xpath="@categid">
                <select id="subjectclass" class="form-control">
                  <option value="">
                    <xed:output i18n="Editor.Common.choose" />
                  </option>
                  <xed:include uri="xslStyle:items2options:classification:editor:-1:children:profkat_class_subjects" />
                </select>
              </xed:bind>
            </div>
            <div class="col-sm-2">
              <div class="btn-group btn-group-sm pull-right">
                <xed:controls />
              </div>
            </div>
          </div>
        </xed:repeat>
      </div>
    </div>
  </xed:bind>
  <!-- Fachgebietsklassifikation [ENDE] -->
  <!-- E-mail [START] -->
  <xed:bind xpath="box.email[@class='MCRMetaLangText']">
    <div class="form-group">
      <label class="col-sm-2 control-label" for="email">
        <xed:output i18n="OMD.CPR.emails" />
      </label>
      <div class="col-sm-10">
        <xed:bind xpath="email">
          <div class="form-group">
            <div class="col-sm-10">
              <div class="row" style="margin-bottom:6px"> 
                <div class="col-sm-12">
                  <input id="email" type="text" class="form-control input-sm"   />
                </div>
              </div>
            </div>
          </div>
        </xed:bind>
      </div>
    </div>
  </xed:bind> 
  <!-- E-mail [ENDE] -->
  
  <!-- Homepage [START] -->
  <xed:bind xpath="box.homepage[@class='MCRMetaLink']">
    <div class="form-group">
      <label class="col-sm-2 control-label" for="homepage">
        <xed:output i18n="OMD.CPR.homepages" />
      </label>
      <div class="col-sm-10">
        <xed:repeat xpath="homepage">
          <div class="form-group">
            <div class="col-sm-10">
              <div class="row" style="margin-bottom:6px"> 
                <label class="col-sm-2 control-label input-sm" for="homepage_url">
                  <xed:output i18n="OMD.CPR.hint.linkurl" />
