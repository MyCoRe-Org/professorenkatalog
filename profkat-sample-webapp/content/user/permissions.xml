<?xml version="1.0" encoding="iso-8859-1"?>
<mcrpermissions
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="MCRPermissions.xsd"
  xmlns:xlink="http://www.w3.org/1999/xlink"
  xmlns:xml="http://www.w3.org/XML/1998/namespace"
>
  <mcrpermission name="administrate" description="Administrationsaufgaben " ruledescription="Administratoren, Editoren mit Teiladminsitrationsrechten">
   <condition format="xml">
    <boolean operator="or">
     <condition value="admin" operator="=" field="group"/>
    </boolean>
   </condition>
  </mcrpermission>

  <mcrpermission name="administrate-webcontent" description="Editieren der statischen WebContent Dateien via FCK" ruledescription="Nur für Administratoren">
   <condition format="xml">
    <boolean operator="or">
     <condition value="adminwebcontent" operator="=" field="group"/>
     <condition value="admin" operator="=" field="group"/>
    </boolean>
   </condition>
  </mcrpermission>
  

  <mcrpermission name="administrate-person" description="Verwalten von Catalogus Professorum Personen" ruledescription="Nur für Administratoren">
   <condition format="xml">
    <boolean operator="or">
     <condition value="editprofessorum" operator="=" field="group"/>
     <condition value="admin" operator="=" field="group"/>
    </boolean>
   </condition>
  </mcrpermission>
  
  <mcrpermission name="administrate-accessrules" description="Verwalten von Zugriffsrechten für Dokumente " ruledescription="Nur für Administratoren">
   <condition format="xml">
    <boolean operator="or">
     <condition value="admin" operator="=" field="group"/>
     <condition value="adminuser" operator="=" field="group"/>
    </boolean>
   </condition>
  </mcrpermission>  

  <mcrpermission name="administrate-user" description="Verwalten von Usern (needed in MCRUserMgr)" ruledescription="Nur für Administratoren">
   <condition format="xml">
    <boolean operator="or">
     <condition value="admin" operator="=" field="group"/>
     <condition value="adminuser" operator="=" field="group"/>
    </boolean>
   </condition>
  </mcrpermission>
  
  <mcrpermission name="create-user" description="Anlegen von Benutzern" ruledescription="Nur für Administratoren">
   <condition format="xml">
    <boolean operator="or">
     <condition value="admin" operator="=" field="group"/>
     <condition value="adminuser" operator="=" field="group"/>
    </boolean>
   </condition>
  </mcrpermission>
  <mcrpermission name="modify-user" description="Verändern von Benutzern" ruledescription="Nur für Administratoren">
   <condition format="xml">
    <boolean operator="or">
     <condition value="admin" operator="=" field="group"/>
     <condition value="adminuser" operator="=" field="group"/>
    </boolean>
   </condition>
  </mcrpermission>    
  <mcrpermission name="delete-user" description="Löschen von Benutzern" ruledescription="Nur für Administratoren">
   <condition format="xml">
    <boolean operator="or">
     <condition value="admin" operator="=" field="group"/>
     <condition value="adminuser" operator="=" field="group"/>
    </boolean>
   </condition>
  </mcrpermission>  
  <mcrpermission name="create-group" description="Anlegen von Gruppen">
   <condition format="xml">
    <boolean operator="or">
     <condition value="admin" operator="=" field="group"/>
     <condition value="adminuser" operator="=" field="group"/>
    </boolean>
   </condition>
  </mcrpermission>
  <mcrpermission name="modify-group" description="Verändern von Gruppen">
   <condition format="xml">
    <boolean operator="or">
     <condition value="admin" operator="=" field="group"/>
     <condition value="adminuser" operator="=" field="group"/>
    </boolean>
   </condition>
  </mcrpermission>  
  <mcrpermission name="delete-group" description="Löschen von Gruppen">
   <condition format="xml">
    <boolean operator="or">
     <condition value="admin" operator="=" field="group"/>
     <condition value="adminuser" operator="=" field="group"/>
    </boolean>
   </condition> 
  </mcrpermission> 
  <mcrpermission name="create-classification" description="Erzeugen einer Klassifikation">
   <condition format="xml">
    <boolean operator="or">
     <condition value="admin" operator="=" field="group"/>
     <condition value="adminclassification" operator="=" field="group"/>
    </boolean>
   </condition>
  </mcrpermission>

  <mcrpermission name="create-person" description="Erzeugen von CPR Daten">
   <condition format="xml">
    <boolean operator="or">
     <condition value="admin" operator="=" field="group"/>
     <condition value="editprofessorum" operator="=" field="group"/>
    </boolean>
   </condition>
  </mcrpermission>

  <mcrpermission name="admininterface-access" description="Zugang zum Admininterface">
   <condition format="xml">
    <boolean operator="or">
     <condition value="admin" operator="=" field="group"/>
    </boolean>
   </condition>
  </mcrpermission>    
  
  <mcrpermission name="admininterface-user" description="Zugang zur Benutzerverwaltung">
   <condition format="xml">
    <boolean operator="or">
     <condition value="admin" operator="=" field="group"/>
     <condition value="adminuser" operator="=" field="group"/>
    </boolean>
   </condition>
  </mcrpermission>    
  <mcrpermission name="admininterface-accessrule" description="Zugang zum Regeleditor">
   <condition format="xml">
    <boolean operator="or">
     <condition value="admin" operator="=" field="group"/>
    </boolean>
   </condition>
  </mcrpermission>        
</mcrpermissions>
