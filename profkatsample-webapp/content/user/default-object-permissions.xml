	</mcrpermission>
	
	<mcrpermission name="deletewf" objectid="default_person" 
	               description="Person aus Workflow löschen">
		<condition format="xml">
			<boolean operator="or">
				<condition value="admin" operator="=" field="group"/>
				<condition value="editprofessorum" operator="=" field="group"/>
			</boolean>
   		</condition>
	</mcrpermission>
	
	<mcrpermission name="read" objectid="default_derivate" 
	               description="Derivate lesen">
		<condition format="xml">
			<boolean operator="true" />
   		</condition>
	</mcrpermission>
	
	<mcrpermission name="commitdb" objectid="default_derivate" 
	               description="Derivate in Datenbank hochladen">
		<condition format="xml">
			<boolean operator="or">
				<condition value="admin" operator="=" field="group"/>
				<condition value="editprofessorum" operator="=" field="group"/>
			</boolean>
   		</condition>
	</mcrpermission>

	<mcrpermission name="deletedb" objectid="default_derivate" 
	               description="Derivate aus Datenbank löschen">
