	<mcrpermission name="deletewf" objectid="default_derivate" 
	               description="Derivate aus Workflow löschen">
		<condition format="xml">
			<boolean operator="or">
				<condition value="admin" operator="=" field="group"/>
				<condition value="editprofessorum" operator="=" field="group"/>
			</boolean>
   		</condition>
	</mcrpermission>
</mcrpermissions>